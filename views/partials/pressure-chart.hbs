<div class="ui segment" id="pressureChart"></div>
<script>
  const pressureData = {
    labels: [
      {{#each station.trendLabels}}
        "{{this}}",
      {{/each}}
    ],
    datasets: [
      {
        name: "Pressue",
        values: [
          {{#each station.pressureTrend}}
            {{this}},
          {{/each}}
        ]
      }
    ]
  }

  const pressureChart = new frappe.Chart("#pressureChart", {
    title: "Pressure Trend",
    data: pressureData,
    type: 'line',
    height: 180,
    y_axis_exp_based_on_range: true,
  })
</script>